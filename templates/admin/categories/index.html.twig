{% extends 'base.html.twig' %}

{% block title %}Hello AdminProjectController!{% endblock %}

{% block body %}
    <style>
        .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
        .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
    </style>

    <div class="example-wrapper">
        <h1>Admin Categories</h1>

        <div>
            <a href="{{ path('admin_categories_add') }}">Add</a>
        </div>

        <div>
            {% for category in categories %}
                <p>{{ category.name }}
                    <a href="{{ path('admin_categories_edit', {id: category.id}) }}">Edit</a>
                    <a href="{{ path('admin_categories_delete', {id: category.id}) }}">Delete</a>
                </p>
            {% endfor %}
        </div>

    </div>
{% endblock %}
