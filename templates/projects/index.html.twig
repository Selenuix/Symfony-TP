{% extends 'base.html.twig' %}

{% block title %}Hello ProjectsController!{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="example-wrapper">
    <h1>Projects</h1>

    {% for project in projects %}
        {% if project.preview is not null %}
            <img src="{{ asset("images/projects/") ~ project.preview }}" alt="Preview of {{ project.name }}"
                 height="100" width="100" />
        {% endif %}

        <h2>{{ project.name }}</h2>
        <p>{{ project.CreatedAt|date("d/m/Y") }}</p>
        <p>{{ project.description|length > 100 ? project.description|slice(0, 100) ~ '...' : project.description }}</p>
    {% endfor %}
</div>
{% endblock %}